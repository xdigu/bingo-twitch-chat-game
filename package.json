{
  "name": "bingo",
  "version": "0.0.1",
  "description": "Twitch bingo game",
  "main": "app.ts",
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "ts-node-dev --respawn --transpile-only  index.ts",
    "lint:show": "eslint '*/**/*.{js,ts}' --fix",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "twitch",
    "game",
    "bingo"
  ],
  "author": "Rodrigo Jorge",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^14.14.25",
    "ts-node-dev": "^1.1.1"
  }
}
